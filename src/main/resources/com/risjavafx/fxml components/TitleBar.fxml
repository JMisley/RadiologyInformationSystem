<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.risjavafx.TitleBar" HBox.hgrow="ALWAYS" >
    <Button id="titleBarButton" fx:id="titleBarCloseButton" mnemonicParsing="false" onAction="#closeApp" prefWidth="50.0">
        <graphic>
            <ImageView fx:id="closeImage" fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        </graphic>
    </Button>
    <Button id="titleBarButton" fx:id="titleBarMaxButton" mnemonicParsing="false" onAction="#maxApp" prefWidth="50.0">
        <graphic>
            <ImageView fx:id="maxImage" fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        </graphic>
    </Button>
    <Button id="titleBarButton" fx:id="titleBarMinButton" mnemonicParsing="false" onMouseClicked="#minApp" prefWidth="50.0">
        <graphic>
            <ImageView fx:id="minImage" fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        </graphic>
    </Button>
   <HBox HBox.hgrow="ALWAYS" />
   <Label alignment="CENTER" contentDisplay="CENTER" text="Radiology Information System" textFill="WHITE">
      <font>
         <Font name="Century Gothic Bold" size="14.0" />
      </font>
      <padding>
         <Insets top="2.0" right="15"/>
      </padding>
   </Label>
</HBox>
