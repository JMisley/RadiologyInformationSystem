<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.risjavafx.Orders">
    <center>
        <BorderPane>
            <top>
                <HBox fx:id="topContent"/>
            </top>
            <left>
                <HBox/>
            </left>
            <right>
                <HBox/>
            </right>
            <bottom>
                <HBox/>
            </bottom>
            <center>
                <StackPane fx:id="centerContent"/>
            </center>
        </BorderPane>
    </center>
    <top>
        <HBox fx:id="titleBar" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER"/>
    </top>
</BorderPane>

