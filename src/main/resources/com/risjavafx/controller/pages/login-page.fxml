<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.risjavafx.controller.Login">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <AnchorPane fx:id="loginContainer" maxHeight="650.0" maxWidth="400.0">
            <Label layoutX="124.0" layoutY="48.0" text="LOGIN" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="48.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="75.0" layoutY="172.0" prefHeight="50.0" prefWidth="250.0" promptText="Username:">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" layoutX="75.0" layoutY="258.0" prefHeight="50.0" prefWidth="250.0" promptText="Password:">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </PasswordField>
            <Button id="primaryButton" fx:id="loginButton" layoutX="75.0" layoutY="396.0" mnemonicParsing="false" onAction="#userLogin" prefHeight="50.0" prefWidth="250.0" text="LOGIN" textAlignment="CENTER">
               <font>
                  <Font name="Century Gothic" size="36.0" />
               </font>
            </Button>
            <StackPane layoutX="100.0" layoutY="309.0" prefHeight="87.0" prefWidth="200.0">
               <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                      textAlignment="CENTER" textFill="#cf6679">
                  <font>
                     <Font size="16.0"/>
                  </font>
               </Label>
            </StackPane>
         </AnchorPane>
      </StackPane>
   </center>
   <top>
      <HBox fx:id="titleBar" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER"/>
   </top>
</BorderPane>
